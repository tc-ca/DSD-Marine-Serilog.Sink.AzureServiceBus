<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Authors>Transport Canada</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Serilog Sink for Azure Service Bus
https://github.com/tc-ca/DSD-Marine-Serilog.Sink.AzureServiceBus</Description>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Serillog; Serilog.Sink; Azure Service Bus; Message Queue;</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/tc-ca/DSD-Marine-Serilog.Sink.AzureServiceBus</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="images\" />
    <Folder Include="Sinks\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.ServiceBus" Version="5.1.1" />
    <PackageReference Include="Serilog" Version="2.10.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="images\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
